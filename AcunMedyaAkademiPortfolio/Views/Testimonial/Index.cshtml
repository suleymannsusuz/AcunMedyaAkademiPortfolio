@model List<AcunMedyaAkademiPortfolio.Models.TblTestimonial>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>İsim</th>
        <th>Açıklama</th>
        <th>Mesleği</th>
        <th>Sil</th>
    </tr>
            @foreach(var item in Model)
             { 
      <tr>
          <td>@item.TestimonialId</td>
          <td>@item.TestimonialName</td>
          <td>@item.TestimonialTitle</td>
          <td>@item.TestimonialDescription</td>
          <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId"class="btn btn-warning">Güncelle</a></td>
          <td><a href="/Testimonial/DeleteteTestimonial/@item.TestimonialId"class="btn btn-danger">Sil</a></td>
      </tr>  
             }
</table>

<td><a href="/Testimonial/CreateTestimonial" class="btn btn-success">Yeni Referans Ekle</a></td>

